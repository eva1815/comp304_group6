<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/teal_200"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_id_books_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imageView_delete_btn"
            android:text="Books Title"
            android:padding="4dp"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/textView_id_books_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_id_books_title"
            android:layout_toLeftOf="@id/imageView_delete_btn"
            android:text="Author Name"
            android:padding="4dp"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/textView_id_books_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_id_books_author_name"
            android:layout_toLeftOf="@id/imageView_delete_btn"
            android:text="Description"
            android:padding="4dp"
            android:layout_margin="4dp"/>
        <TextView
            android:id="@+id/textView_id_books_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_id_books_description"
            android:layout_toLeftOf="@id/imageView_delete_btn"
            android:text="Category"
            android:padding="4dp"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/textView_id_books_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_id_books_category"
            android:layout_toLeftOf="@id/imageView_delete_btn"
            android:text="Quantity"
            android:padding="4dp"
            android:layout_margin="4dp"/>

        <ImageView
            android:id="@+id/imageView_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/image_delete"
            android:layout_centerVertical="true"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>